---
import { useTranslations } from "../i18n/utils"

const currentLang = Astro.currentLocale || 'es'
const translateLabels = useTranslations(currentLang as "es" | "en" );
---
<div class="wrapperfondo" >
    <div class = "fondo"> <img src="/images/bg.webp" alt=""></div>
</div>
<section aria-label=" alejandro vÃ¡zquez contact" id="contact">
   
    <h2>{translateLabels('contact')}</h2>
    
    <ul>
    <li class="contactList" id="copyLink"><a href="#"></a>Email</a></li>
    <li class="contactList"><a href="https://www.instagram.com/camelcompact99/" target="_blank" rel="noopener noreferrer">Instagram</a></li>
    <li class="contactList"><a href="https://www.linkedin.com/in/alejandro-vazquez-a9b7162a4/">Linkedin</a></li>
    <li class="contactList"><a href="https://www.tiktok.com/@camelcompact99">Tiktok</a></li>
    </ul>
    <span class="opentowork"> {translateLabels('open')}</span>
  
</section>

<style>
    .wrapperfondo{
        position: relative;
    }
    #contact{
        margin: auto;
		padding: 1rem;
		width: 95%;
		max-width: calc(100% - 2rem);
        position: relative;
        padding-top: 20rem;
        height: 80vh;
        padding-block: 3rem;
        padding-bottom: 0rem;
        display:flex;
        flex-direction: column;
        color:white;
        
     
    }
    #contact h2{
        margin-top: 15rem;
        font-size: 2.25rem;
        font-weight: 600;
        margin-bottom: 0px;
        padding-bottom: 0px ;
        text-transform: lowercase;
        margin-bottom: 0%;
        text-shadow: 1px 1px 2px black;
    }
    #contact ul{
        display: flex;
        flex-wrap: wrap;
        list-style: none;
       font-size: 1.5em;
       width: 100%;
       justify-content: space-between;
       padding: 0%;
       font-family:"OT Bulb Monoline";
       
       text-transform: uppercase;
      
       

    }
    #contact li {
        
        padding-inline: 20px;
        padding-block: 6px;
        margin-block: 7px;
      
        transition: 0.2s ease-in-out;
        text-shadow: 1px 1px 2px black;
    }
    #contact li:hover{
        transform:scale(1.1);
        text-shadow: 5px 5px 20px rgb(0, 255, 0);
        padding-block: 6px;
        padding-inline: 30px;
        
    }
    #contact a{
        color:white;
       
       
    }
    .opentowork{
        align-self: center;
        text-shadow: 1px 1px 2px black;
    }

    .fondo{
        height: 100vh;
        position :absolute;
        top: 0;
        width: 100vw;
        background-color:black ;
        
        z-index: -2;
        overscroll-behavior-block: contain;
    }
    .fondo img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    @media (max-width: 640px) {
        #contact ul{
            flex-direction: column;
		}
    }




</style>

<script type="module">
    document.addEventListener("astro:page-load",()=>{
       
        document.getElementById('copyLink')?.addEventListener('click',()=>{
          
            const textToCopy = "vazquez.tome.alejandro@gmail.com"
            navigator.clipboard.writeText(textToCopy)
        .then(() => {
           
            alert('mail copied on yout clipboard: '+  textToCopy); // Opcional: Mostrar un mensaje al usuario
        })
        .catch(err => {
            console.error('Error al copiar el texto: ', err);
        });
        })
    })
</script>